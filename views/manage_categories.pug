extends layout

block content
  .container
    .row
      .col-md-12
        a(class="btn btn-info float-end", href="/manage/categories/add") Add Category

    h1 #{title}
    table(class='table table-striped')
      tr
        th Category Title
        th
      each category, i in categories
        tr
          td #{category.title}
          td
            a(class="btn btn-outline-info" href='/manage/categories/edit/' + category._id) Edit
